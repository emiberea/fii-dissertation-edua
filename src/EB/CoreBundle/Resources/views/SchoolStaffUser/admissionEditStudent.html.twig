{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-8">
            <h2>Student #{{ student.id }} <b>{{ student.fullName }}</b></h2>
            <table class="table">
                <thead></thead>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ student.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ student.email }}</td>
                    </tr>
                    <tr>
                        <th>First Name</th>
                        <td>{{ student.firstName }}</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>{{ student.lastName }}</td>
                    </tr>
                    <tr>
                        <th>Father Initial</th>
                        <td>{{ student.fatherInitial }}</td>
                    </tr>
                    <tr>
                        <th>Pin</th>
                        <td>{{ student.pin }}</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>{{ student.city }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ student.address }}</td>
                    </tr>
                    <tr>
                        <th>High School</th>
                        <td>{{ student.highSchool }}</td>
                    </tr>
                    <tr>
                        <th>Specialization</th>
                        <td>{{ student.specialization }}</td>
                    </tr>
                    <tr>
                        <th>Baccalaureate Average Grade</th>
                        <td>{{ student.baccalaureateAverageGrade }}</td>
                    </tr>
                    <tr>
                        <th>Baccalaureate Maximum Grade</th>
                        <td>{{ student.baccalaureateMaximumGrade }}</td>
                    </tr>
                    <tr>
                        <th>Enabled</th>
                        <td>{% if student.enabled %}Yes{% else %}No{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Verified</th>
                        <td>{% if student.verified %}Yes{% else %}No{% endif %}</td>
                    </tr>
                </tbody>
            </table>

            <h3>Edit attending student: <b>{{ student.fullName }}</b></h3>
            <div class="alert alert-info"><b>Tip:</b> Mark student as verified, in case you completed all his marks and verified his data.</div>
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <input type="submit" value="Edit" class="btn btn-warning">
            {{ form_end(form) }}
        </div>
        <div class="col-md-4">
            <a href="{{ path('eb_core_ssu_admission_view_students', {'id': admission.id}) }}" class="btn btn-default pull-right">Back to the list</a>
            <h2>Admission #{{ admission.id }}</h2>
            <table class="table">
                <thead></thead>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ admission.id }}</td>
                    </tr>
                    <tr>
                        <th>Created At</th>
                        <td>{% if admission.createdAt %}{{ admission.createdAt|date('d-m-Y') }}{% else %}-{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Session Date</th>
                        <td>{% if admission.sessionDate %}{{ admission.sessionDate|date('d-m-Y') }}{% else %}-{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Budget Financed No</th>
                        <td>{{ admission.budgetFinancedNo }}</td>
                    </tr>
                    <tr>
                        <th>Fee Payer No</th>
                        <td>{{ admission.feePayerNo }}</td>
                    </tr>
                    <tr>
                        <th>Budget / Fee Threshold</th>
                        <td>{{ admission.budgetFeeThreshold }}</td>
                    </tr>
                    <tr>
                        <th>Fee / Rejected No</th>
                        <td>{{ admission.feeRejectedThreshold }}</td>
                    </tr>
                    <tr>
                        <th>Closed At</th>
                        <td>{% if admission.closedAt %}{{ admission.closedAt|date('d-m-Y') }}{% else %}-{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ admission.statusAsString }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
