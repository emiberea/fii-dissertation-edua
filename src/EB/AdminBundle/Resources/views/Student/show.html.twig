{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <a href="{{ path('eb_admin_student_index') }}" class="btn btn-default pull-right">Back to the list</a>
            <h2>Student #{{ studentUser.id }}</h2>
            <table class="table">
                <thead></thead>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ studentUser.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ studentUser.email }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ studentUser.getTitleAsString }}</td>
                    </tr>
                    <tr>
                        <th>First Name</th>
                        <td>{{ studentUser.firstName }}</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>{{ studentUser.lastName }}</td>
                    </tr>
                    <tr>
                        <th>Father Initial</th>
                        <td>{{ studentUser.fatherInitial }}</td>
                    </tr>
                    <tr>
                        <th>Pin</th>
                        <td>{{ studentUser.pin }}</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>{{ studentUser.city }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ studentUser.address }}</td>
                    </tr>
                    <tr>
                        <th>High School</th>
                        <td>{{ studentUser.highSchool }}</td>
                    </tr>
                    <tr>
                        <th>Specialization</th>
                        <td>{{ studentUser.specialization }}</td>
                    </tr>
                    <tr>
                        <th>Baccalaureate Average Grade</th>
                        <td>{{ studentUser.baccalaureateAverageGrade }}</td>
                    </tr>
                    <tr>
                        <th>Baccalaureate Maximum Grade</th>
                        <td>{{ studentUser.baccalaureateMaximumGrade }}</td>
                    </tr>
                    <tr>
                        <th>Enabled</th>
                        <td>
                            {% if studentUser.enabled == false %}
                                <span class="label label-danger not-read">
                                    <span class="glyphicon glyphicon-remove"></span> NO
                                </span>
                            {% else %}
                                <span class="label label-success">
                                    <span class="glyphicon glyphicon-ok"></span> YES
                                </span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Verified</th>
                        <td>
                            {% if studentUser.verified == false %}
                                <span class="label label-danger not-read">
                                    <span class="glyphicon glyphicon-remove"></span> NO
                                </span>
                            {% else %}
                                <span class="label label-success">
                                    <span class="glyphicon glyphicon-ok"></span> YES
                                </span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('eb_admin_student_edit', { 'id': studentUser.id }) }}" class="btn btn-warning">Edit</a>
            <div class="pull-right">
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn btn-danger">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
