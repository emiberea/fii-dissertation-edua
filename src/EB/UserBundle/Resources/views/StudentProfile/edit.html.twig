{% extends '::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'EBCoreBundle:Form:fields.html.twig' %}

{% block content %}
    <div class="row">
        {{ form_start(form, {'method': 'post', 'action': path('eb_user_student_profile_edit')}) }}
            <div class="col-md-4 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-heading">Account data</div>
                    <div class="panel-body">
                        {{ form_row(form.email) }}
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">Personal data</div>
                    <div class="panel-body">
                        {{ form_row(form.firstName) }}
                        {{ form_row(form.lastName) }}
                        {{ form_row(form.fatherInitial) }}
                        {{ form_row(form.pin) }}
                        {{ form_row(form.city) }}
                        {{ form_row(form.address) }}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">School data</div>
                    <div class="panel-body">
                        {{ form_row(form.highSchool) }}
                        {{ form_row(form.specialization) }}
                        {{ form_row(form.baccalaureateAverageGrade) }}
                        {{ form_row(form.baccalaureateMaximumGrade) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_widget(form.current_password, {attr: {placeholder: 'Current Password'}}) }}
                    {{ form_errors(form.current_password) }}
                </div>
                {{ form_rest(form) }}
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="{{ 'profile.edit.submit'|trans }}" />
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
