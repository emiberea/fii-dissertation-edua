{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h2>School #{{ school.id }}</h2>
            <table class="table">
                <thead></thead>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ school.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ school.name }}</td>
                </tr>
                <tr>
                    <th>Country</th>
                    <td>{{ school.country }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ school.city }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ school.address }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ school.type }}</td>
                </tr>
                </tbody>
            </table>

            <p>Admission sessions for this school:</p>
            {# @TODO: add table with admissions for this school #}
        </div>
    </div>
{% endblock %}
