{% extends '::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h3>{{ student.firstname }} {{ student.lastname }}</h3>
        </div>
        <div class="col-md-5">
            <div class="panel panel-default">
                <div class="panel-heading">Account data</div>
                <table class="table table-hover">
                    <thead></thead>
                    <tbody>
                        <tr>
                            <th>{{ 'profile.show.email'|trans }}</th>
                            <td>{{ student.email }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">Personal data</div>
                <table class="table table-hover">
                    <thead></thead>
                    <tbody>
                        <tr>
                            <th>Firstname</th>
                            <td>{{ student.firstname }}</td>
                        </tr>
                        <tr>
                            <th>Lastname</th>
                            <td>{{ student.lastname }}</td>
                        </tr>
                        <tr>
                            <th>Father Initial</th>
                            <td>{{ student.fatherInitial }}</td>
                        </tr>
                        <tr>
                            <th>Pin</th>
                            <td>{{ student.pin }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ student.city }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ student.address }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">School data</div>
                <table class="table table-hover">
                    <thead></thead>
                    <tbody>
                        <tr>
                            <th>HighSchool</th>
                            <td>{{ student.highSchool }}</td>
                        </tr>
                        <tr>
                            <th>Specialization</th>
                            <td>{{ student.specialization }}</td>
                        </tr>
                        <tr>
                            <th>Baccalaureate Average Grade</th>
                            <td>{{ student.baccalaureateAverageGrade }}</td>
                        </tr>
                        <tr>
                            <th>Baccalaureate Maximum Grade</th>
                            <td>{{ student.baccalaureateMaximumGrade }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
