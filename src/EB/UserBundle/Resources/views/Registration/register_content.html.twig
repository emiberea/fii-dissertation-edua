{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'EBCoreBundle:Form:fields.html.twig' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    <div class="panel panel-default">
        <div class="panel-heading">Account data</div>
        <div class="panel-body">
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_widget(form.email, {attr: {placeholder: 'Email'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.plainPassword.first, {attr: {placeholder: 'Password'}}) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.plainPassword.second, {attr: {placeholder: 'Confirm Password'}}) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Personal data</div>
        <div class="panel-body">
            <div class="form-group">
                {{ form_widget(form.firstName, {attr: {placeholder: 'Firstname'}}) }}
                {{ form_errors(form.firstName) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.lastName, {attr: {placeholder: 'Lastname'}}) }}
                {{ form_errors(form.lastName) }}
            </div>
        </div>
    </div>
    <div class="checkbox">
        <label>
            {{ form_widget(form.terms) }} Terms and Conditions
        </label>
        {{ form_errors(form.terms) }}
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="{{ 'registration.submit'|trans }}" />
    </div>
{{ form_end(form) }}
