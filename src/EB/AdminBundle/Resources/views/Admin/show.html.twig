{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <a href="{{ path('eb_admin_admin_index') }}" class="btn btn-default pull-right">Back to the list</a>
            <h2>Student #{{ admin.id }}</h2>
            <table class="table">
                <thead></thead>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ admin.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ admin.email }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ admin.getTitleAsString }}</td>
                    </tr>
                    <tr>
                        <th>First Name</th>
                        <td>{{ admin.firstName }}</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>{{ admin.lastName }}</td>
                    </tr>
                    <tr>
                        <th>Enabled</th>
                        <td>
                            {% if admin.enabled == false %}
                                <span class="label label-danger not-read">
                                    <span class="glyphicon glyphicon-remove"></span> NO
                                </span>
                            {% else %}
                                <span class="label label-success">
                                    <span class="glyphicon glyphicon-ok"></span> YES
                                </span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('eb_admin_admin_edit', { 'id': admin.id }) }}" class="btn btn-warning">Edit</a>
            <div class="pull-right">
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn btn-danger">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
