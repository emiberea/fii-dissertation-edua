{% extends '::base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'EBCoreBundle:Form:fields.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            {{ form_start(form, {'method': 'post', 'action': path('eb_user_school_staff_profile_edit')}) }}
                <div class="panel panel-default">
                    <div class="panel-heading">Account data</div>
                    <div class="panel-body">
                        {{ form_row(form.email) }}
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">Personal data</div>
                    <div class="panel-body">
                        {{ form_row(form.title) }}
                        {{ form_row(form.firstName) }}
                        {{ form_row(form.lastName) }}
                        {{ form_row(form.jobTitle) }}
                        {{ form_row(form.academicDegree) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_widget(form.current_password, {attr: {placeholder: 'Current Password'}}) }}
                    {{ form_errors(form.current_password) }}
                </div>
                {{ form_rest(form) }}
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="{{ 'profile.edit.submit'|trans }}" />
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
