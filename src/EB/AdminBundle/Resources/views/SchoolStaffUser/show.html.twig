{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <a href="{{ path('eb_admin_ssu_index') }}" class="btn btn-default pull-right">Back to the list</a>
            <h2>School Staff User #{{ schoolStaffUser.id }}</h2>
            <table class="table">
                <thead></thead>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ schoolStaffUser.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ schoolStaffUser.email }}</td>
                    </tr>
                    <tr>
                        <th>First Name</th>
                        <td>{{ schoolStaffUser.firstName }}</td>
                    </tr>
                    <tr>
                        <th>Last Name</th>
                        <td>{{ schoolStaffUser.lastName }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ schoolStaffUser.titleAsString }}</td>
                    </tr>
                    <tr>
                        <th>Job Title</th>
                        <td>{{ schoolStaffUser.jobTitle }}</td>
                    </tr>
                    <tr>
                        <th>Academic Degree</th>
                        <td>{{ schoolStaffUser.academicDegree }}</td>
                    </tr>
                    <tr>
                        <th>Enabled</th>
                        <td>
                            {% if schoolStaffUser.enabled == false %}
                                <span class="label label-danger not-read">
                                    <span class="glyphicon glyphicon-remove"></span> NO
                                </span>
                            {% else %}
                                <span class="label label-success">
                                    <span class="glyphicon glyphicon-ok"></span> YES
                                </span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('eb_admin_ssu_edit', { 'id': schoolStaffUser.id }) }}" class="btn btn-warning">Edit</a>
            <div class="pull-right">
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" class="btn btn-danger">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
