{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>School List</h2>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Country</th>
                            <th>City</th>
                            <th>Address</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for school in pagination %}
                            <tr>
                                <td>{{ school.id }}</td>
                                <td><a href="{{ path('eb_admin_school_show', { 'id': school.id }) }}">{{ school.name }}</a></td>
                                <td>{{ school.country }}</td>
                                <td>{{ school.city }}</td>
                                <td>{{ school.address }}</td>
                                <td>{{ school.type }}</td>
                                <td>
                                    <a href="{{ path('eb_admin_school_show', { 'id': school.id }) }}" class="btn btn-info btn-xs">Show</a>
                                    <a href="{{ path('eb_admin_school_edit', { 'id': school.id }) }}" class="btn btn-warning btn-xs">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="panel-footer">
                    <a href="{{ path('eb_admin_school_new') }}" class="btn btn-default">Add School</a>
                </div>
            </div>
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
