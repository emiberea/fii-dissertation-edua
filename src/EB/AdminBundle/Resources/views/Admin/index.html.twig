{% extends '::base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Admin List</h2>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Title</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Enabled</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for admin in pagination %}
                            <tr>
                                <td>{{ admin.id }}</td>
                                <td><a href="{{ path('eb_admin_admin_show', { 'id': admin.id }) }}">{{ admin.email }}</a></td>
                                <td>{{ admin.titleAsString }}</td>
                                <td>{{ admin.firstName }}</td>
                                <td>{{ admin.lastName }}</td>
                                <td>
                                    {% if admin.enabled == false %}
                                        <span class="label label-danger not-read">
                                            <span class="glyphicon glyphicon-remove"></span> NO
                                        </span>
                                    {% else %}
                                        <span class="label label-success">
                                            <span class="glyphicon glyphicon-ok"></span> YES
                                        </span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('eb_admin_admin_show', { 'id': admin.id }) }}" class="btn btn-info btn-xs">Show</a>
                                    <a href="{{ path('eb_admin_admin_edit', { 'id': admin.id }) }}" class="btn btn-warning btn-xs">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="panel-footer">
                    <a href="{{ path('eb_admin_admin_new') }}" class="btn btn-default">Add Admin</a>
                </div>
            </div>
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
